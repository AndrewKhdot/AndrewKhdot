@model List<BooksAndMovie.Model.User>
@using BooksAndMovie.Model;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>ChooseUser</h1>
<div class="col-md-4">
    <form asp-action="ChosenUser" method="get">

        @Html.DropDownList("id", new SelectList(Model, "Id", "Name"), "Выберите пользователя")

     
        <div>
            <input type="submit" name="id" value="Choose" />
            @*<input type="button" asp-action="ChosenUser" asp-route-id="id" />*@
        </div>
    </form>
</div>